{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://skillhub.local/schema/skill.json",
  "title": "SkillHub Skill Manifest",
  "type": "object",
  "required": ["id", "name", "version", "summary"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "entrypoint": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "adapters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["productID", "installMode"],
        "properties": {
          "productID": { "type": "string" },
          "installMode": {
            "type": "string",
            "enum": ["symlink", "copy", "config-patch"]
          },
          "targetPath": { "type": "string" },
          "configPatch": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        },
        "additionalProperties": false
      },
      "default": []
    }
  },
  "additionalProperties": false
}
